{
  "agents": {
    "defaults": {
      "workspace": "~/.localagent/workspace",
      "restrict_to_workspace": true,
      "model": "llama3.2:latest",
      "max_tokens": 8192,
      "temperature": 0.7,
      "max_tool_iterations": 20
    }
  },
  "provider": {
    "api_key_env": "",
    "api_base": "http://localhost:11434/v1"
  },
  "gateway": {
    "host": "0.0.0.0",
    "port": 18790
  },
  "tools": {
    "web": {
      "brave": {
        "enabled": false,
        "api_key_env": "",
        "max_results": 5
      },
      "duckduckgo": {
        "enabled": false,
        "max_results": 5
      }
    },
    "pdf": {
      "url": "",
      "api_key_env": ""
    }
  },
  "heartbeat": {
    "enabled": true,
    "interval": 30
  },
  "devices": {
    "enabled": false
  },
  "webchat": {
    "host": "0.0.0.0",
    "port": 18791
  },
  "web_enabled": false
}
